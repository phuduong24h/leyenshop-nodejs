{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "strict": false,
    "skipLibCheck": true,
    "allowJs": true,
    // Main
    "baseUrl": "./src",
    "paths": {
      "configs": ["configs"],
      "configs/*": ["configs/*"],
      "@constants": ["constants/index"],
      "@constants/*": ["constants/*"],
      "controllers": ["controllers/index"],
      "controllers/*": ["controllers/*"],
      "enums": ["enums/index"],
      "enums/*": ["enums/*"],
      "middlewares": ["middlewares/index"],
      "middlewares/*": ["middlewares/*"],
      "models": ["models/index"],
      "models/*": ["models/*"],
      "routes": ["routes/index"],
      "routes/*": ["routes/*"],
      "services": ["services/index"],
      "services/*": ["services/*"],
      "swaggers": ["swaggers/index"],
      "swaggers/*": ["swaggers/*"],
      "test": ["test/index"],
      "test/*": ["test/*"],
      "types": ["types/index"],
      "types/*": ["types/*"],
      "utils": ["utils/index"],
      "utils/*": ["utils/*"],
      "src/*": ["*"],
      "*": ["*", "node_modules/*"]
    }
  },
  "exclude": ["node_modules", "babel.config.js", "metro.config.js", "jest.config.js"],
  "include": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx"]
}
